 {% extends 'base.html.twig' %}

{% block body %}
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for entry in types %}
    <tr>
      <td width="20%">{{entry.name}}</td>
      <td width="50%" style="font-size:12px">{{entry.description}}</td>
      <td><a title="Edit" href="{{path('typeedit', {id: entry.id})}}"><i class="fas fa-edit fa-lg"></i></a></td>
      <td><a title="Remove" href="{{path('typedelete', {id: entry.id})}}"><i class="fas fa-minus-circle fa-lg"></i></a></td>
    </tr>
    
    {% endfor %}
    
  </tbody>
</table>

<a href="{{path('addtype')}}" class="btn btn-primary">Add type</a>

{% endblock %}
